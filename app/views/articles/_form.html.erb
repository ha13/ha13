
<%= form_for @article do |f| %>

  <% if @article.errors.any? %>

      <%= pluralize(@article.errors.count,"error")%>

      <ul>
        <% @article.errors.full_messages.each do |m|%>
          <li><%= m %></li>
        <% end %>
      </ul>

  <% end %>

  <div>
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :string %> </br>
    <%= f.text_area :string %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
