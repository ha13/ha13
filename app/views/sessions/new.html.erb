<h1><%= t :login %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f|%>

      <div class="form-group">
        <%= f.label :email, (t :email, scope:[:activerecord,:models,:attributes,:user])%>
        <%= f.text_field :email, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :password, (t :password, scope:[:activerecord,:models,:attributes,:user]) %>
        <%= f.password_field :password, class: "form-control"%>
      </div>
      <div class="form-group">
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me%>
            <span><%= t :remember_me%></span>
          <%end%>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit (t :login), class: "btn btn-primary"%>
      </div>
    <%end%>
    <%= t :new_user%>? <%= link_to (t :signup_now), new_user_path%>
  </div>
</div>
